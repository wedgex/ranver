#!/bin/sh
 
GEM_NAME=$(basename $PWD)
VERSION_FILE="$PWD/lib/$GEM_NAME/version.rb"
MAJOR=$(($RANDOM % 1000))
MINOR=$(($RANDOM % 1000))
PATCH=$(($RANDOM % 1000))
VERSION="$MAJOR.$MINOR.$PATCH"
 
sed 's/VERSION.*/VERSION = "'$VERSION'"/g' $VERSION_FILE > $VERSION_FILE
git add $VERSION_FILE
rm $VERSION_FILE-e